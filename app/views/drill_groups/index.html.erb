
<p id="notice">
  <%= notice %>
</p>

<h1>Drill Groups</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Level</th>
      <th>Max points</th>
      <th>Badge name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @drill_groups.each do |drill_group| %>
      <tr>
        <td><%= drill_group.name %></td>
        <td><%= drill_group.description %></td>
        <td><%= drill_group.level %></td>
        <td><%= drill_group.max_points %></td>
        <td><%= drill_group.badge_name %></td>
        <td><%= link_to 'Show', drill_group %></td>
        <td><%= link_to 'Edit', edit_drill_group_path(drill_group) %></td>
        <td><%= link_to 'Destroy', drill_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

