
<p id="notice">
  <%= notice %>
</p>

<h1>Drill Groups</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Level</th>
      <th>Max points</th>
      <th>Badge name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @drill_groups.each do |drill_group| %>
      <tr>
        <td><%= drill_group.name %></td>
        <td><%= drill_group.description %></td>
        <td><%= drill_group.level %></td>
        <td><%= drill_group.max_points %></td>
        <td><%= drill_group.badge_name %></td>
        <td><%= link_to(
          'Add Drill Group',
          user_student_drill_groups_path({
            user_id: current_user,
            drill_group_id: drill_group.id
            }),
            method: :post
            ) %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
