<main class="page-container form-group">
  <%= simple_form_for @drill_group do |f| %>

    <%= f.input :name, class: 'form-control' %>

    <%= f.input :description, class: 'form-control' %>

    <div class="form-group">

      <div class="form-check form-check-inline">
        <%= f.radio_button :level, "1", checked: (@drill_group.level == 1 ? true : false), class: 'form-check-input', type: 'radio' %>
        <%= label :level, 'Beginner', class: 'form-check-label' %>
      </div>

      <div class="form-check form-check-inline">
        <%= f.radio_button :level, "2", checked: (@drill_group.level == 2 ? true : false), class: 'form-check-input', type: 'radio' %>
        <%= label :level, 'Intermediate', class: 'form-check-label' %>
      </div>

      <div class="form-check form-check-inline">
        <%= f.radio_button :level, "3", checked: (@drill_group.level == 3 ? true : false), class: 'form-check-input' %>
        <%= label :level, 'Advanced', class: 'form-check-label' %>
      </div>

    </div>

    <%= f.input :max_points, class: 'form-control', min: '0' %>

    <%= f.input :badge_name, class: 'form-control' %>

    <%= f.submit 'Save', class: 'btn btn-outline-light my-3' %>

  <% end %>
</main>
