<!DOCTYPE html>
<html>
  <head>
    <title>Codechampz</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>

    <nav class="nav navbar navbar-light bg-light navbar-expand-sm justify-content-between">
      <div class="logo">
        <a class="navbar-brand" href="/">
          <%= image_tag 'https://upload.wikimedia.org/wikipedia/commons/thumb/5/55/Question_Mark.svg/1000px-Question_Mark.svg.png', alt: 'logo-icon', style: "width:40px; height: 40px;"%>
        </a>
      </div>
      <% if user_signed_in? %>

        <% if current_user.is_admin? %>
          <ul class="navbar nav">
            <li class="navbar-item admin"><%= link_to 'Home', root_path %></li>
            |
            <li class="navbar-item admin"><%= link_to 'Drillz', drill_groups_path %></li>
            |
            <li class="navbar-item admin"><%= link_to 'Users', users_path %></li>
            |
            <li class="navbar-item"><%= link_to 'Logout', session_path, method: :delete %></li>
          </ul>

        <% else %>

          <ul class="navbar nav">
            <div class="navbar nav">
              <li class="navbar-item student"><%= link_to 'My Drillz', student_drill_groups_path %></li>
              |
              <li class="navbar-item student"><%= link_to 'All Drillz', drill_groups_path %></li>
              |
              <li class="navbar-item student"><%= link_to 'Leaderboard', leaderboard_path %></li>
            </div>
            <div class="navbar nav">
              <li class="navbar-item student">
                <span>Hello,
                  <%= current_user.first_name %>!</span></li>
              <li class="navbar-item student"><%= link_to 'Profile', user_path(current_user) %></li>
              ,
              <li class="navbar-item"><%= link_to 'Logout', session_path, method: :delete %></li>
            </div>
          </ul>

        <% end %>

      <% else %>
        <ul class="navbar nav">
          <li class="navbar-item"><%= link_to 'Sign In', new_session_path %></li> | <li class="navbar-item"><%= link_to 'Sign Up', new_user_path %></li>
        </ul>
      <% end %>

    </nav>

    <div class="container">

      <% if flash[:notice].present? || flash[:alert].present? %>
        <div class="flash-message">
          <%= flash[:notice] || flash[:alert] %>
        </div>
      <% end %>

      <%= yield %>

    </div>

  </body>
</html>
