<h1>Leaderboard</h1>

<ul class="list-group list-group-flush w-50 mx-auto">
<% @users.each do |user| %>
  <li class="list-group-item d-flex justify-content-between align-items-center">
      <%= user.first_name %>
      <h3><span class="badge badge-light badge-pill"><%= user.total_points %></span></h3>
  </li>
  <% end %>
  </ul>