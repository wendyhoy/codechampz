<h1>Leaderboard</h1>

<div class="w-50 mx-auto">
<div class="leaderboard-current-user my-4 d-flex">
  <div>
    <h4>
      <span class="badge badge-secondary badge-pill ml-3 p-3">Your points</span>
      <%= get_user_points(current_user) %>
    </h4>
  </div>
  <div>
    <h4>
      <span class="badge badge-secondary badge-pill ml-3 p-3">Your badges</span>
      <%= @badges.count %>
    </h4>
  </div>
</div>

<ul class="list-group list-group-flush">
  <% @users.each do |user| %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <%= user.first_name %>
        <h3>
          <span class="badge badge-light badge-pill">
            <%= user.total_points %>
          </span>
        </h3>
    </li>
    <% end %>
</ul>

</div>